service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/kasutajad/$(request.auth.uid)).data.admin == true
    }

    match /{document=**} {
      allow read, write: if false;
    }

    match /kasutajad/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    match /sisu/{kategooria} {
      allow read;
      allow create, write, update, delete: if isAdmin();

      match /teemad/{teema} {
        allow read: if resource.data.shared;
      }
    }

    match /index/index {
      allow read;
    }
  }
}
